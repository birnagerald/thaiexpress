{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row my-5">
            <div class="col">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{stats.users}} utilisateurs</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col text-center">
                            <a href="{{ path('admin_user') }}"><button class="btn btn-primary mb-3">Gérer les utilisateurs</button></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-dark text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-utensils fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{stats.dish}} plats</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col text-center">
                            <a href="{{ path('admin_dish') }}"><button class="btn btn-dark mb-3">Gérer les plats</button></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-info text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-list fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{stats.category}} Catégories</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col text-center">
                            <a href="{{ path('admin_category') }}"><button class="btn btn-info mb-3">Gérer les catégories</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
