{% extends 'base.html.twig' %}

{% block title %}Inscription au site{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
            <div class="col">
                <div class="bg-light py-3 px-3">
                
                 <h1 class="my-5">Inscrivez vous sur le site !</h1>

                   
                
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col">

                                <div class="alert alert-light">
                                    <h2 class="alert-heading">Information de connexion</h2>
                                    <hr> 
                                    {{ form_row(form.email) }}
                                    {{ form_row(form.firstName) }}
                                    {{ form_row(form.lastName) }}
                                    {{ form_row(form.password) }}  
                                </div>
                            </div>
                            
                            <div class="alert alert-light">
                                <h2 class="alert-heading">Confirmation</h2>
                                <hr>
                            <p>Confirmez votre inscription et rejoignez nous !</p>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-check"></i> 
                                    Inscription !
                                </button>
                            </div>
                            
                            
                        </div>
                        {{ form_end(form) }}
                </div>
            </div>
    </div>
</div>

{% endblock %}