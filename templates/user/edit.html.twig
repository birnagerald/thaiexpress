{% extends 'base.html.twig' %}

{% block title %}Ã‰dition d'un utilisateur{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col">
            <div class="bg-light py-3 px-3">
                <h1 class="my-5">Modification d'un utilisateur</h1>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col">
                        <div class="alert alert-light">
                            <h2 class="alert-heading">Information sur l'utilisateur</h2>
                            <hr> 
                            {{ form_row(form.firstName) }}
                            {{ form_row(form.lastName) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.enable) }}
                            {{ form_row(form.roles) }}
                            <h2 class="alert-heading">Confirmation</h2>
                            <hr>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check"></i> 
                                Modifier !
                            </button>
                        </div>   
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}